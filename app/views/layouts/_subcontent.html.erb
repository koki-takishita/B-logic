<div class='container sub-content'>
  <%if @goal && @goal.persisted?%>
    <div class='row contents'>
      <div class='col content'>
        <h2 class='label'><%=Goal.model_name.human%></h2>
        <h2 class='text'><%=order_join(@goal.quantification, @goal.unit, @goal.embodiment)%></h2>
      </div>
      <div class='col content'>
        <h2 class='label'><%=Goal.human_attribute_name('days_left')%></h2>
        <h2 class='text'><%=days_left(@goal.deadline_on)%></h2>
      </div>
    </div>
  <%end%>
</div>
