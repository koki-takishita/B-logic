<div id="js-issue-record-<%=issue.id%>">
  <div class="row margin_bottom_10">
    <%= render 'shared/modal/IssueShow', issue: issue %>
    <div class="d-flex justify-content-between">
      <div class="issue_object d-flex align-items-stretch h3 m-0">
        <%= button_tag issue.name, 'data-bs-toggle': 'modal', 'data-bs-target': "#IssueShowModal#{issue.id}", class: 'issue_hover_text issue_object_text_color text-decoration-none m-0'%>
      </div>
      <div class="text-center d-flex align-items-center justify-content-center">
        <div class="row">
          <div class="col p-1">
            <%= link_to '達成', issue_path(issue), method: 'delete', type: 'button', class: 'btn issue-btn', remote: true,  data: { confirm: '本当に課題を達成しましたか？', 'turbolinks' => false}%>
          </div>
          <div class="col p-1">
            <%= link_to '削除', issue_path(issue), method: 'delete', type: 'button', class: 'btn issue-btn', data: { confirm: '本当に削除しますか？'}%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
