<div class="modal fade" id="TaskNewModal" tabindex="-1" aria-labelledby="TaskNewModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content task_modal_border_color">
      <div class="modal-header task-modal-header">
        <h5 class="modal-title" id="TaskNewModalLabel">新規</h5>
        <!--
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        </button>
        -->
      </div>

      <%= form_with  model: Task.new, local: true, html: { autocomplete: 'off' } do |f| %>
        <div class="modal-body">
          <div class="field task-field">
            <%= f.label :task_id, Issue.human_attribute_name(:solution), class: 'form-label'%>
            <%= f.select :issue_id, issues_select, {include_blank: false} ,class: 'form-control task-form-control'%>
          </div>
          <div class="field task-field">
            <%= f.label :name, Task.human_attribute_name(:name), class: 'form-label'%>
            <%= f.text_field :name, class: 'form-control task-form-control'%>
          </div>
          <div class="field task-field">
            <%= f.label :reminder, Task.human_attribute_name(:reminder), class: 'form-labl d-block' %>
            <%= f.date_select :reminder, {}, { class: 'task-form-control'} %>
          </div>
          <%=f.hidden_field :user_id, value: current_user.id%>
        </div>
        <div class="modal-footer task-modal-footer">
          <button type="button" class="task-btn btn" data-bs-dismiss="modal">閉じる</button>
          <%= f.submit '登録する', class: 'btn task-btn'%>
        </div>
      <%end%>
    </div>
  </div>
</div>
