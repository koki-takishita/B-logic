<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content user_modal_border_color">
      <div class="modal-header user-modal-header">
        <h5 class="modal-title" id="exampleModalLabel">新規</h5>
      </div>
      <div class="modal-body">
        <div id="user_create_flash"></div>
        <%= form_with model: User.new, html: { autocomplete: 'off' } do |f| %>
          <div class="field user-field">
            <%= f.label :email, class: 'form-label'%>
            <%= f.text_field :email, class: 'form-control user-form-control'%>
          </div>
          <div class="field user-field">
            <%= f.label :password, class: 'form-labl' %>
            <%= f.password_field :password, class: 'form-control user-form-control' %>
          </div>
          <div class="field user-field">
            <%= f.label :password_confirmation, class: 'form-label' %>
            <%= f.password_field :password_confirmation, class: 'form-control user-form-control'%>
          </div>
      </div>
      <div class="modal-footer user-modal-footer">
        <button type="button" class="user-btn btn" data-bs-dismiss="modal">閉じる</button>
          <%= f.submit class: 'btn user-btn'%>
        <%end%>
      </div>
    </div>
  </div>
</div>
