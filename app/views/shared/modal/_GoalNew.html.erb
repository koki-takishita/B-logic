<!-- Modal -->
<div class="modal fade" id="GoalNewModal" tabindex="-1" aria-labelledby="GoalNewModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content goal_modal_border_color">
      <div class="modal-header goal-modal-header">
        <h5 class="modal-title" id="GoalNewModalLabel">新規</h5>
        <!--
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        </button>
        -->
      </div>

      <%= form_with  model: Goal.new, html: { autocomplete: 'off' } do |f| %>
        <div class="modal-body">
          <div id="goal_create_flash"></div>
          <div class="field goal-field">
            <%= f.label :name, Goal.human_attribute_name(:name), class: 'form-label'%>
            <%= f.text_field :name, class: 'form-control goal-form-control'%>
          </div>
          <div class="field goal-field">
            <%= f.label :deadline, Goal.human_attribute_name(:deadline), class: 'form-labl d-block' %>
            <%= f.date_select :deadline, {}, { class: 'goal-form-control'} %>
          </div>
        </div>
        <div class="modal-footer goal-modal-footer">
          <button type="button" class="goal-btn btn" data-bs-dismiss="modal">閉じる</button>
          <%= f.submit '登録する', class: 'btn goal-btn'%>
        </div>
      <%end%>
    </div>
  </div>
</div>
