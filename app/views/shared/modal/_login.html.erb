<!-- Modal -->
<div class="modal fade" id="LoginModal" tabindex="-1" aria-labelledby="LoginModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content user_modal_border_color">
      <div class="modal-header user-modal-header">
        <h5 class="modal-title" id="LoginModalLabel"><%=t('.login')%></h5>
      </div>
      <div class="modal-body">
        <div id="user-session-flash"></div>
        <%= form_with scope: :session, url: login_path, method: :post, html: { autocomplete: 'off' }, local: true do |f| %>
          <div class="field user-field">
            <%= f.label :email, User.human_attribute_name(:email), class: 'form-label'%>
            <%= f.text_field :email, class: 'form-control white-form-control'%>
          </div>
          <div class="field user-field">
            <%= f.label :password, User.human_attribute_name(:password), class: 'form-labl' %>
            <%= f.password_field :password, class: 'form-control white-form-control' %>
          </div>
      </div>
      <div class="modal-footer user-modal-footer">
        <button type="button" class="white-btn btn" data-bs-dismiss="modal"><%= I18n.t('modal.close')%></button>
        <%= f.submit t('.login'), class: 'btn white-btn'%>
        <%end%>
      </div>
    </div>
  </div>
</div>

