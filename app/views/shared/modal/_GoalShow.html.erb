<!-- Modal -->
<div class="modal fade" id="GoalShowModal<%=goal.id%>" tabindex="-1" aria-labelledby="GoalShowModal<%=goal.id%>Label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content goal_modal_border_color">
      <div class="modal-header goal-modal-header">
        <!--<h5 class="modal-title" id="GoalShowModal<%=goal.id%>Label">詳細</h5>-->
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <button class="nav-link active btn goal-btn me-1" id="nav-details-tab" data-bs-toggle="tab" href="#nav-details" role="tab" aria-controls="nav-details" aria-selected="true">詳細</a>
          <button class="nav-link goal-btn btn" id="nav-edit-tab" data-bs-toggle="tab" href="#nav-edit" role="tab" aria-controls="nav-edit" aria-selected="false">編集</a>
        </div>
      </div>
      <div class="modal-body">
        <div class="tab-content" id="nav-tabContent">
          <div class="tab-pane fade show active" id="nav-details" role="tabpanel" aria-labelledby="nav-details-tab">
            <%=label_tag 'what_to_do', '目標名', class: 'form-label'%>
            <h2 class="border-orange"><%=goal.what_to_do%></h2>
            <%=label_tag 'deadline_on', '期限', class: 'form-label'%>
            <h2 class="border-orange"><%=l goal.deadline_on, format: :date%></h2>
          </div>
          <div class="tab-pane fade" id="nav-edit" role="tabpanel" aria-labelledby="nav-edit-tab">
            <%= form_with  model: goal, local: true, html: { autocomplete: 'off' } do |f| %>
              <div class="field goal-field">
                <%= f.label :what_to_do, Goal.human_attribute_name(:what_to_do), class: 'form-label'%>
                <%= f.text_field :what_to_do, class: 'form-control goal-form-control'%>
              </div>
              <div class="field goal-field">
                <%= f.label :deadline_on, Goal.human_attribute_name(:deadline_on), class: 'form-labl' %>
                <%= f.text_field :deadline_on, class: 'form-control goal-form-control d-block', id: 'picker' %>
              </div>
              <div class='field goal-field text-center'>
                <%= f.submit '更新する', class: 'btn goal-btn'%>
							</div>
						<%end%>
					</div>
        </div>
      </div>

      <div class="modal-footer goal-modal-footer">
        <button type="button" class="goal-btn btn" data-bs-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>
